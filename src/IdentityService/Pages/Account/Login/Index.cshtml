@page
@model IdentityService.Pages.Login.Index


<body>

    <partial name="_ValidationSummary" />

    <div class="wrapper text-center mt-5">

        @if (Model.View.EnableLocalLogin)
        {
            <div>
                <h6 class="text-dark mb-4">Bienvenue dans</h6>
            </div>
            <h1>EduSoft</h1>

            <form asp-page="/Account/Login/Index">
                <input type="hidden" asp-for="Input.ReturnUrl" />

                <div class="input-box">
                    <input placeholder="Nom d'utilisateur" asp-for="Input.UserName">
                    <i>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-person-fill" viewBox="0 0 16 16">
                            <path d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6" />
                        </svg>
                    </i>
                </div>
                <div class="input-box">
                    <input type="password" placeholder="Mot de passe" asp-for="Input.Password" autocomplete="off">
                    <i>
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-lock-fill" viewBox="0 0 16 16">
                            <path
                                d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2m3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2" />
                        </svg>
                    </i>
                </div>

                @if (Model.View.AllowRememberLogin)
                {
                    <div class="form-check">
                        <input class="form-check-input" asp-for="Input.RememberLogin">
                        <label class="form-check-label" asp-for="Input.RememberLogin">
                            Souvenez-vous de moi
                        </label>
                    </div>
                }

                <button class="btn" name="Input.Button" value="login">Se connecter</button>
            </form>
        }


    </div>

</body>